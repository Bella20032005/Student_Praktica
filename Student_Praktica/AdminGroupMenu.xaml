<Page x:Class="Student_Praktica.AdminGroupMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Student_Praktica"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminGroupMenu">

    <Grid>
        <ListView x:Name="ListGroup" SelectionChanged="ListGroup_SelectionChanged">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel >
                        <Label Content="{Binding ID}"/>
                        <Label Content="{Binding Profession_Name}"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
